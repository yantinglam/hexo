//- social
if theme.social && (is_home() || is_post() || page.layout == 'about')
  div.social
    for link, name in theme.social
      if link
        - var href = name != "email" ? url_for(link) : ('mailto:' + link)
        a.iconfont(class="icon-#{name}" href=href title=name)

//- friendly links
if(theme.links)
  div.friendly-links
    h6.friendly-links-text
      != "友情链接"
    for link, name in theme.links
      a.friendly-links-url(href=link)
        != name

//- Copyright
if page.layout != 'tags' && page.layout != 'categories'
  .copyright
    - var currentDate = new Date()
    - var year = currentDate.getFullYear()
    - var since = config.since
    if since
      - year = year == since ? year : since + '-' + year
    - copyright = '&copy;' + year
    
    p.power
      != "Powered by "
      a(href="https://hexo.io/")
        != "Hexo" 
      != " and Theme by "
      a(href="https://github.com/ahonn/hexo-theme-even") 
        != "Even"
    p.since
      != copyright
      span.heart
        i.iconfont.icon-heart
      span.author
        != config.author

    p.calculate
      script(async src="//dn-lbstatics.qbox.me/busuanzi/2.3/busuanzi.pure.mini.js")
      span#busuanzi_container_site_pv
        != "本站总访问量"
        span#busuanzi_value_site_pv
        != "次"
  
//- Back to top
#back2top
  i.iconfont.icon-up
